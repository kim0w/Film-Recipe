# Production Environment Variables for Film Recipe
# Copy this file to .env and fill in the values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=8080

# SECRET_KEY: MUST be changed in production!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY

# Database
# For SQLite (default):
DATABASE_URL=sqlite:///database/filmrecipe.db

# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:password@host:5432/filmrecipe

# Upload Configuration
MAX_CONTENT_LENGTH=52428800
ALLOWED_EXTENSIONS=jpg,jpeg,png,tiff,tif

# CORS (comma-separated list of allowed origins)
# Update with your actual frontend URL
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging
LOG_LEVEL=INFO

# Next.js Frontend
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# Optional: For GCP deployment
# GCP_PROJECT_ID=your-project-id
# GCP_REGION=us-central1
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
