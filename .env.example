# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1  # localhost only for security (use 0.0.0.0 for external access)
FLASK_PORT=5000
SECRET_KEY=dev-secret-key-change-in-production

# Database
DATABASE_URL=sqlite:///database/filmrecipe.db

# Upload Configuration
MAX_CONTENT_LENGTH=52428800
ALLOWED_EXTENSIONS=jpg,jpeg,png,tiff,tif

# CORS
CORS_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=INFO
